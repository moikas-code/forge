{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Forge MOI",
  "version": "0.1.0",
  "identifier": "com.forge-moi.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Forge MOI",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true,
        "minWidth": 1200,
        "minHeight": 700,
        "titleBarStyle": "hiddenInset",
        "hiddenTitle": true,
        "acceptFirstMouse": true,
        "tabbingIdentifier": "forge-moi"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https: http: data: blob:; script-src 'self' 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; connect-src 'self' ipc: http: https: ws: wss:; font-src 'self' data:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "all": false,
      "execute": true,
      "sidecar": true,
      "scope": [
        {
          "name": "sh",
          "cmd": "sh",
          "args": ["-c", { "validator": ".*" }]
        },
        {
          "name": "cmd",
          "cmd": "cmd",
          "args": ["/C", { "validator": ".*" }]
        }
      ]
    },
    "fs": {
      "all": true,
      "readFile": true,
      "writeFile": true,
      "readDir": true,
      "copyFile": true,
      "createDir": true,
      "removeDir": true,
      "removeFile": true,
      "renameFile": true,
      "exists": true,
      "scope": ["$APPDATA/*", "$APPDATA/**", "$HOME/*", "$HOME/**"]
    },
    "store": {
      "autoSave": true
    }
  }
}
